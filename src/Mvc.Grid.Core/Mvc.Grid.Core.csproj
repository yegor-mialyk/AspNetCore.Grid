<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Version>6.2.4</Version>
    <Nullable>enable</Nullable>
    <Company>NonFactors</Company>
    <LangVersion>9.0</LangVersion>
    <GenerateFullPaths>true</GenerateFullPaths>
    <Copyright>Copyright © NonFactors</Copyright>
    <PackageId>NonFactors.Grid.Core.Mvc6</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>NonFactors.Mvc.Grid</RootNamespace>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <DebugType Condition="'$(Configuration)'=='Release'">none</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.TagHelpers" Version="1.1.8" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.ViewFeatures" Version="1.1.8" />
  </ItemGroup>

</Project>
